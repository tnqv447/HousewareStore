                                    var count = urlString.Count();
                                    if(count > 2){
                                        if(Url.Action().Split("/")[2] == "Sale"){
                                            check =false;
                                            urlString = Url.Action().Split("/");
                                        }
                                        if(Url.Action().Split("/")[2] == "Buyer"){
                                            check =false;
                                            urlString = Url.Action().Split("/");
                                        }
                                    }
                                    
                                }
